.page-header
	h2!= message
if (tableId != 'deletedTable')
	div
		form(action=action,method='GET')
			input(type='submit',value='New',class="btn")
div
	table(id="#{tableId}", style="padding-top:10px")
		thead
			tr
				th(style="text-align:left") Name
				if (tableId == 'foodTable')
					th(style="text-align:left") Origin
				if (tableId == 'deletedTable')
					th Delete
				else
					th Edit
		tbody
			each row, i in rows
				tr
					td(style="text-align:left") #{row.name}
					if (tableId == 'foodTable')
						td(style="text-align:left") #{row.origin}
					td(style='text-align:center')
						if (tableId == 'deletedTable')
							button(onclick='deleteUser("#{row.id}")', class="goButton", style='margin-bottom: 16px') Delete
						else
							form(action=action + '/' + row.id, method='get')
								input(type='submit',value='Go', class="goButton", style='margin: 0')
